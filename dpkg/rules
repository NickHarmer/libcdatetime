#!/usr/bin/make -f
# debian/rules that uses debhelper >= 7.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS


%:
	dh  $@

install_libcdatetime:
	# Set up libcdatetime package directories and files
	mkdir -p debian/libcdatetime/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so.*.*.* debian/libcdatetime/usr/lib

install_libcdatetime_dev:
	# Set up libcdatetime-dev package directories and files
	mkdir -p debian/libcdatetime-dev/usr/include
	mkdir -p debian/libcdatetime-dev/usr/include/libcdatetime
	mkdir -p debian/libcdatetime-dev/usr/lib
	mkdir -p debian/libcdatetime-dev/usr/lib/pkgconfig
	mkdir -p debian/libcdatetime-dev/usr/share/man/man3
	install -p -m755 debian/tmp/usr/include/*.h debian/libcdatetime-dev/usr/include
	install -p -m755 debian/tmp/usr/include/libcdatetime/*.h debian/libcdatetime-dev/usr/include/libcdatetime
	install -p -m755 debian/tmp/usr/lib/*.la debian/libcdatetime-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.a debian/libcdatetime-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so debian/libcdatetime-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/pkgconfig/* debian/libcdatetime-dev/usr/lib/pkgconfig
	install -p -m755 debian/tmp/usr/share/man/man3/* debian/libcdatetime-dev/usr/share/man/man3

override_dh_auto_test:

override_dh_installinit: install_libcdatetime install_libcdatetime_dev

override_dh_installmenu:

override_dh_installmime:

override_dh_installmodules:

override_dh_installlogcheck:

override_dh_installlogrotate:

override_dh_installpam:

override_dh_installppp:

override_dh_installudev:

override_dh_installwm:

override_dh_installxfonts:

override_dh_gconf:

override_dh_icons:

override_dh_perl:

override_dh_pysupport:

override_dh_shlibdeps:
	dh_shlibdeps -Llibcdatetime -l${PWD}/debian/tmp/usr/lib

override_dh_makeshlibs:
	dh_makeshlibs -Xlibcdatetime-dev

